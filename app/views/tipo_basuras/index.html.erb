<p id="notice"><%= notice %></p>

<h1>Tipo Basuras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Foto</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_basuras.each do |tipo_basura| %>
      <tr>
        <td><%= tipo_basura.nombre %></td>
        <td><%= tipo_basura.foto %></td>
        <td><%= tipo_basura.descripcion %></td>
        <td><%= link_to 'Show', tipo_basura %></td>
        <td><%= link_to 'Edit', edit_tipo_basura_path(tipo_basura) %></td>
        <td><%= link_to 'Destroy', tipo_basura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


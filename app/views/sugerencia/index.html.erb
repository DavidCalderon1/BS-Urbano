<h1>Sugerencia</h1>

<table>
  <thead>
    <tr>
      <th>Detalle</th>
      <th>Usuario</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sugerencia.each do |sugerencium| %>
      <tr>
        <td><%= sugerencium.detalle %></td>
        <td><%= sugerencium.usuario_id %></td>
        <td><%= sugerencium.fecha %></td>
        <td><%= link_to 'Show', sugerencium %></td>
        <td><%= link_to 'Edit', edit_sugerencium_path(sugerencium) %></td>
        <td><%= link_to 'Destroy', sugerencium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

